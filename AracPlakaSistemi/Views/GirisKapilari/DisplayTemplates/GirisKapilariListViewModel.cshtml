
@model AracPlakaSistemi.ViewModels.Admin.GirisKapilariListViewModel
<tr id="@("kapi_"+Model.Id)" class="master-row">

    <td>@Model.KapiAdres</td>
    <td>@if (Model.Active.Equals(true))
    {
        <label>Geçit Var ✅</label>
    }
    else if (Model.Active.Equals(false))
    {
    <label>Geçit Yok ⛔</label>
    }
    </td>
 
   
    <td style="width:50px">
        <a data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-update="#kapi_@Model.Id"
           data-modal-highlight="#kapi_@Model.Id"
           data-modal-title="Kapı Düzenle"
           data-hook-beforeunload="true"
           class="btn btn-block btn-success btn-sm"
           href="@Url.Action("Edit", "GirisKapilari", routeValues: new {kapiId=Model.Id})">
            <i class="fa fa-edit fa-fw text-success"></i> Giriş Kapısı Düzenle
        </a>

    </td>
    <td style="width:50px">
        <a href="javascript:void(0);"
           data-toggle="confirmation"
           title="Emin Misiniz"
           data-btn-ok-label="Evet"
           data-btn-cancel-label="Hayır"
           data-placement="top"
           data-kapi-id="@Model.Id"
           data-on-confirm="deleteGirisKapisi"
           class="btn btn-block btn-danger btn-sm">
            <i class="fa fa-trash fa-fw text-danger"></i> Giriş Kapısı Sil
        </a>

    </td>
</tr>
