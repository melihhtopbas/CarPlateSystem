@model AracPlakaSistemi.ViewModels.Admin.GirisYapanAracAddViewModel
<div class="row">
    <div class="col-xs-12">
        <div class="alert alert-warning alert-dismissible">
            <h4><i class="fa-solid fa-circle-info"></i> Bilgilendirme!</h4>

            <ul>
                <li>Lütfen giriş yapan araç plakasını ve hangi kapıdan giriş yaptığını giriniz!</li>

            </ul>
        </div>
    </div>
</div>

<div class="clearfix"></div>
<br />
<div class="clearfix"></div>
@using (Html.BeginForm("Add", "GirisYapanArac", FormMethod.Post, new { id = "girisYapanAracAddForm", role = "form" }))
{
    <style>
        form ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        form li {
            float: left;
        }

            form li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                form li a:hover {
                    background-color: #111111;
                }
    </style>
    <div class="row">
        <div class="col-xs-12">
            @Html.AntiForgeryToken()
            @Html.RenderValidationSummary(true)

        </div>
    </div>

    <div class="row">

        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.Plaka)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.Plaka, new { @class = "show-maxlength", maxlength = "10", autofocus = "true" })
        </div>



        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="row">
                @Html.EditorFor(m => m.GirisKapisi)
            </div>
        </div>






        <div class="clearfix"></div>


    </div>
    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
            <button class="btn btn-danger pull-right" type="button" data-dismiss="modal"><span class="fa fa-times"></span>&nbsp;&nbsp;İptal</button>
        </div>
    </div>
    <div class="clearfix"></div>

}